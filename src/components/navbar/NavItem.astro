---
const { url, title } = Astro.props;
const path = Astro.url.pathname;
const active = path === url;
const ariaCurrentVal = active && 'page';
import { HTMLAttributes } from 'astro/types';
interface Props extends HTMLAttributes<'a'> {
  ariaCurrent?: '' | 'page';
  url: string;
  title: string;
  active: boolean;
}
---

<li class="nav-item">
  <a
    class:list={['nav-link', { active }]}
    href={url}
    aria-current={ariaCurrentVal}
  >
    {title}
  </a>
</li>
